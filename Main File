       // driveTurnFor(36.5, 36.5, 63, 60);
        //driveTimeout(2, 2);
        
        //delay and wait for .350 of a second
        //pick up ball
        vex::task::sleep(350);
        
        
        //gyroTurn(true, 50, 50, abs(now - Gyro.value(vex::analogUnits::range8bit)));
        //stop intake
        Intake.stop(vex::brakeType::coast); 
        //vex::task::sleep(200);
        
